<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cerceve_purple"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_uni"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Boğaziçi Üniversitesi"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>

                <ImageView
                    android:id="@+id/playlist_check_img"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:background="@drawable/ic_playlist_add_check"
                    android:backgroundTint="@color/lightgreen"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"/>

                <ImageView
                    android:visibility="visible"
                    android:id="@+id/playlist_add_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:background="@drawable/ic_playlist_add"
                    android:backgroundTint="@color/primaryOrange"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp">

                <TextView
                    android:id="@+id/tv_sehir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/lightgray"
                    android:text="İstanbul"/>

                <TextView
                    android:id="@+id/tv_unitur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/lightgray"
                    android:text="Devlet"
                    android:layout_gravity="end"/>

            </FrameLayout>



            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/tv_bolum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bilgisayar Mühendisliği"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tv_alan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MF"
                    android:textSize="16sp"
                    android:textColor="@color/lightgray"
                    android:layout_gravity="end"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginTop="1dp"
                    android:layout_gravity="center|start"
                    android:textColor="@color/lightgray"
                    android:text="Puan: " />

                <TextView
                    android:id="@+id/tv_puan"
                    android:layout_marginStart="43dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:text="526.564"
                    android:textSize="16sp"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginEnd="70dp"
                    android:layout_marginTop="1dp"
                    android:gravity="end"
                    android:layout_gravity="end|center"
                    android:textColor="@color/lightgray"
                    android:text="Sıralama: "
                    />

                <TextView
                    android:id="@+id/tv_sıralama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5260000"
                    android:layout_gravity="end|center"
                    android:gravity="end"
                    android:textSize="16sp"
                    android:textColor="@color/black" />


            </FrameLayout>



        </LinearLayout>


    </LinearLayout>

</LinearLayout>