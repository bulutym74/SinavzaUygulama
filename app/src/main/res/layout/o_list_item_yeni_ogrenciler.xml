<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/transitions_container"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cerceve_purple"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="11dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_isim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ali Furkan Budak"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tv_sinif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12-A"
                    android:textColor="@color/lightgray"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_bolum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Sayısal"
                    android:paddingEnd="11dp"
                    android:textColor="@color/lightgray"
                    android:textSize="16sp" />

            </FrameLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/txt_ogrNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:text="Öğr. No:"
                    android:textColor="@color/lightgray"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_ogrenciNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:layout_marginStart="65dp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_reddet"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:padding="0dp"
                    android:layout_gravity="end|center"
                    android:layout_marginEnd="100dp"
                    android:text="reddet"
                    android:textColor="@color/lightred"
                    android:textSize="15sp"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btn_onayla"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:padding="0dp"
                    android:layout_gravity="end|center"
                    android:text="onayla"
                    android:textColor="@color/lightgreen"
                    android:textSize="15sp"
                    android:visibility="visible" />


            </FrameLayout>



        </LinearLayout>


    </LinearLayout>

</LinearLayout>