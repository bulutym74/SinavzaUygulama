<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/transitions_container"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cerceve_purple"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="11dp"
            android:paddingEnd="11dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_testAdi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="40dp"
                    android:layout_gravity="start|center"
                    android:text="Test 17 (Konu Kavrama)"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>

                <ImageView
                    android:id="@+id/check_img"
                    android:visibility="invisible"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="end"
                    android:background="@drawable/round_check_img"
                    android:backgroundTint="@color/lightgreen"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"/>

                <ImageView
                    android:id="@+id/add_img"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="2dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/add"
                    android:backgroundTint="@color/primaryOrange"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:visibility="visible" />

            </FrameLayout>

            <TextView
                android:id="@+id/tv_kitapAdi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/darkgray"
                android:text="Birey Matemetik B Üniversite Hazırlık "/>


            <TextView
                android:id="@+id/tv_konuAdi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="12dp"
                android:layout_gravity="center|start"
                android:textColor="@color/lightgray"
                android:text="Trigonometri" />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>