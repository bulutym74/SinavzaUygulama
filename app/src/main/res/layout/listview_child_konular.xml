<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/row_layout">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp">

        <TextView
            android:id="@+id/txt_items_konular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:text="Medium Text"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_tarih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:layout_marginStart="20dp"
            android:textColor="@color/lightgray"
            android:text="15/09/2018"
            android:textSize="15sp" />


    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp">

        <EditText
            android:nextFocusDown="@+id/et_yanlis"
            android:id="@+id/et_dogru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:hint="Doğru"
            android:maxLength="2"
            android:inputType="number"
            android:textSize="16sp" />

        <EditText
            android:imeOptions="actionDone"
            android:id="@+id/et_yanlis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginStart="80dp"
            android:maxLength="2"
            android:hint="Yanlış"
            android:inputType="number"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_soru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginStart="150dp"
            android:text="18 Soru"
            android:textColor="@color/lightgray"
            android:textSize="15sp" />


        <Button
            android:id="@+id/btn_gonder"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:text="GÖNDER"
            android:textColor="@color/lightgreen"
            android:textSize="15sp" />
    </FrameLayout>


</LinearLayout>