<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/arkaplan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:animateLayoutChanges="true">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_tercihyap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:backgroundTint="@color/lightgreen"
        android:src="@drawable/tick"
        android:tint="@color/black"
        android:visibility="visible"
        app:borderWidth="0dp" />

    ////////////////////////////////////

    <android.support.v7.widget.CardView
        android:id="@+id/search_ekrani"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="50dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/editext_style">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center|start"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/search"
                    android:tint="@color/lightgray" />

                <EditText
                    android:id="@+id/et_search"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="18dp"
                    android:background="@android:color/transparent"
                    android:hint="Bölüm Ara"
                    android:textColorHint="@color/lightgray"
                    android:textSize="16sp" />
            </FrameLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_tercihyap"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@color/white"/>



        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:paddingStart="8dp">

            <TextView
                android:id="@+id/tv_secim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:text="Seçim yok" />

            <Button
                android:id="@+id/iv_done"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="10dp"
                android:text="tamamla"
                android:textColor="@color/lightgreen"
                android:textSize="17sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/iv_copkutusu"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="10dp"
                android:text="Sil"
                android:textColor="@color/primaryPurple"
                android:textSize="15sp"
                android:visibility="visible" />


        </FrameLayout>


    </android.support.v7.widget.CardView>

    /////////////////////////////////////

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:elevation="4dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tercih Yap"
                android:textColor="@color/black"
                android:textSize="22sp" />

        </android.support.v7.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/normal_ekran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/tv_bolum_filtrele"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:gravity="top"
                    android:orientation="vertical">

                    <FrameLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:layout_marginStart="15dp"
                            android:background="@drawable/ic_filter_list" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center|start"
                            android:layout_marginStart="45dp"
                            android:text="Bölümleri Filtrele"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/sayi_bolum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|end"
                            android:layout_marginEnd="50dp"
                            android:text="5"
                            android:textColor="@color/lightgray"
                            android:textSize="16sp"
                            android:visibility="invisible" />

                        <Button
                            android:id="@+id/copkutusu_bolum"
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center|end"
                            android:layout_marginEnd="15dp"
                            android:layout_marginStart="10dp"
                            android:padding="3dp"
                            android:text="Sil"
                            android:textColor="@color/primaryPurple"
                            android:textSize="15sp"
                            android:visibility="invisible" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginStart="15dp"
                            android:background="@color/primaryPurple" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recycler_view_bolum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tv_uni_filtrele"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:layout_marginTop="10dp"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:gravity="top"
                    android:orientation="vertical">

                    <FrameLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:layout_marginStart="15dp"
                            android:background="@drawable/ic_filter_list" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center|start"
                            android:layout_marginStart="45dp"
                            android:text="Üniversiteleri Filtrele"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/sayi_uni"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|end"
                            android:layout_marginEnd="50dp"
                            android:text="5"
                            android:textColor="@color/lightgray"
                            android:textSize="16sp"
                            android:visibility="invisible" />

                        <Button
                            android:id="@+id/copkutusu_uni"
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center|end"
                            android:layout_marginEnd="15dp"
                            android:layout_marginStart="10dp"
                            android:padding="3dp"
                            android:text="Sil"
                            android:textColor="@color/primaryPurple"
                            android:textSize="15sp"
                            android:visibility="invisible" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginStart="15dp"
                            android:background="@color/primaryPurple" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recycler_view_uni"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:id="@+id/tv_sehir_filtrele"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:gravity="top"
                    android:orientation="vertical">

                    <FrameLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:layout_marginStart="15dp"
                            android:background="@drawable/ic_filter_list" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center|start"
                            android:layout_marginStart="45dp"
                            android:text="Şehirleri Filtrele"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/sayi_sehir"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|end"
                            android:layout_marginEnd="50dp"
                            android:text="5"
                            android:textColor="@color/lightgray"
                            android:textSize="16sp"
                            android:visibility="invisible" />

                        <Button
                            android:id="@+id/copkutusu_sehir"
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center|end"
                            android:layout_marginEnd="15dp"
                            android:layout_marginStart="10dp"
                            android:padding="3dp"
                            android:text="Sil"
                            android:textColor="@color/primaryPurple"
                            android:textSize="15sp"
                            android:visibility="invisible" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginStart="15dp"
                            android:background="@color/primaryPurple" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recycler_view_sehir"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:id="@+id/tv_uniTur_filtrele"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:gravity="top"
                    android:orientation="vertical">

                    <FrameLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:layout_marginStart="15dp"
                            android:background="@drawable/ic_filter_list" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center|start"
                            android:layout_marginStart="45dp"
                            android:text="Üniversite Türü Filtrele"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/sayi_uniTur"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|end"
                            android:layout_marginEnd="50dp"
                            android:text="5"
                            android:textColor="@color/lightgray"
                            android:textSize="16sp"
                            android:visibility="invisible" />

                        <Button
                            android:id="@+id/copkutusu_uniTur"
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center|end"
                            android:layout_marginEnd="15dp"
                            android:layout_marginStart="10dp"
                            android:padding="3dp"
                            android:text="Sil"
                            android:textColor="@color/primaryPurple"
                            android:textSize="15sp"
                            android:visibility="invisible" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginStart="15dp"
                            android:background="@color/primaryPurple" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recycler_view_uniTur"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:id="@+id/tv_puantur_filtrele"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:gravity="top"
                    android:orientation="vertical">

                    <FrameLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:layout_marginStart="15dp"
                            android:background="@drawable/ic_filter_list" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center|start"
                            android:layout_marginStart="45dp"
                            android:text="Puan Türü Filtrele"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/sayi_puantur"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|end"
                            android:layout_marginEnd="50dp"
                            android:text="5"
                            android:textColor="@color/lightgray"
                            android:textSize="16sp"
                            android:visibility="invisible" />

                        <Button
                            android:id="@+id/copkutusu_puantur"
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center|end"
                            android:layout_marginEnd="15dp"
                            android:layout_marginStart="10dp"
                            android:padding="3dp"
                            android:text="Sil"
                            android:textColor="@color/primaryPurple"
                            android:textSize="15sp"
                            android:visibility="invisible" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginStart="15dp"
                            android:background="@color/primaryPurple" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recycler_view_puantur"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="150dp"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/e1"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="15dp"
                        android:gravity="center"
                        android:hint="Sıralama"
                        android:inputType="numberDecimal"
                        android:textSize="16sp" />


                    <RadioGroup
                        android:id="@+id/rg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb_sıralama"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="15dp"
                            android:checked="true"
                            android:text="Sıralama" />

                        <RadioButton
                            android:id="@+id/rb_puan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:text="Puan" />


                    </RadioGroup>


                </LinearLayout>

            </LinearLayout>

        </ScrollView>


    </LinearLayout>

    <View
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/darkBack"
        android:visibility="gone" />


</FrameLayout>