<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:visibility="gone"
                android:id="@+id/img_cancel_outlined"
                android:layout_width="25dp"
                android:layout_gravity="center|start"
                android:layout_marginStart="8dp"
                android:layout_height="25dp"
                android:src="@drawable/cancel_outlined"/>

            <TextView
                android:id="@+id/txt_items_konular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:text="Medium Text"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="80dp"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold" />

        </LinearLayout>



        <TextView
            android:id="@+id/tv_tarih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:textColor="@color/lightgray"
            android:text="15/09/2018"
            android:textSize="15sp" />


    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp">

        <EditText
            android:id="@+id/et_dogru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:hint="Doğru"
            android:inputType="number"
            android:maxLength="2"
            android:nextFocusDown="@+id/et_yanlis"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_yanlis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginStart="80dp"
            android:hint="Yanlış"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLength="2"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/tv_soru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginStart="150dp"
            android:text="18 Soru"
            android:textColor="@color/lightgray"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_gonder"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:text="GÖNDER"
            android:textColor="@color/lightgreen"
            android:textSize="15sp" />
    </FrameLayout>


</LinearLayout>